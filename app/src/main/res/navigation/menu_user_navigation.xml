<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_user_navigation"
    app:startDestination="@id/homeUserFragment">
    <action android:id="@+id/action_global_homeUserFragment" app:destination="@id/homeUserFragment" />
    <action android:id="@+id/action_global_scanUserFragment" app:destination="@id/scanAssetQrCodeFragment" />
    <action android:id="@+id/action_global_historyUserFragment" app:destination="@id/historyUserFragment" />
    <action android:id="@+id/action_global_detailTicketFragment" app:destination="@id/detailTicketFragment"/>
    <fragment
        android:id="@+id/homeUserFragment"
        android:name="com.example.androidfinalproject.screens.user.HomeUserFragment"
        android:label="fragment_home_user"
        tools:layout="@layout/fragment_home_user" >
        <action
            android:id="@+id/action_homeUserFragment_to_topUpSaldoFragment"
            app:destination="@id/topUpSaldoFragment" />
    </fragment>

    <fragment
        android:id="@+id/topUpSaldoFragment"
        android:name="com.example.androidfinalproject.screens.user.TopUpSaldoFragment"
        android:label="fragment_top_up_saldo"
        tools:layout="@layout/fragment_top_up_saldo" />
    <fragment
        android:id="@+id/scanAssetQrCodeFragment"
        android:name="com.example.androidfinalproject.screens.user.ScanAssetQrCodeFragment"
        android:label="fragment_scan_asset_qr_code"
        tools:layout="@layout/fragment_scan_asset_qr_code" >

    </fragment>
    <fragment
        android:id="@+id/historyUserFragment"
        android:name="com.example.androidfinalproject.screens.user.HistoryUserFragment"
        android:label="fragment_history_user"
        tools:layout="@layout/fragment_history_user" />
    <fragment
        android:id="@+id/profileUserFagment"
        android:name="com.example.androidfinalproject.screens.user.ProfileUserFagment"
        android:label="fragment_profile_user_fagment"
        tools:layout="@layout/fragment_profile_user_fagment" />
    <action android:id="@+id/action_global_profileUserFagment" app:destination="@id/profileUserFagment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.androidfinalproject.screens.user.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_detailAssetFragment"
            app:destination="@id/detailAssetFragment" />
    </fragment><action android:id="@+id/action_global_searchFragment" app:destination="@id/searchFragment"/>
    <fragment
        android:id="@+id/detailTicketFragment"
        android:name="com.example.androidfinalproject.screens.user.DetailTicketFragment"
        android:label="fragment_detail_ticket"
        tools:layout="@layout/fragment_detail_ticket" />
    <fragment
        android:id="@+id/detailAssetFragment"
        android:name="com.example.androidfinalproject.screens.user.DetailAssetFragment"
        android:label="fragment_detail_asset"
        tools:layout="@layout/fragment_detail_asset" />
    android:id="@+id/detailTicketFragment"
        android:name="com.example.androidfinalproject.screens.user.DetailTicketFragment"
        android:label="fragment_detail_ticket"
        tools:layout="@layout/fragment_detail_ticket" />

</navigation>