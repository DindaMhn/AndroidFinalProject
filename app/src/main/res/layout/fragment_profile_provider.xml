<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.provider.ProfileProviderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                android:id="@+id/vector_2"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_vector_3" />

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/photoProfileProvider"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/defaultphoto" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/ChangePhotoProvider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlue"
                    android:clickable="true"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_baseline_photo_camera_24"
                    android:text=" Edit Profile Photo" />

<!--                <com.google.android.material.button.MaterialButton-->
<!--                    android:id="@+id/deleteProviderPhoto"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:text="Delete Photo"-->
<!--                    app:cornerRadius="38dp"-->
<!--                    android:backgroundTint="@color/colorRed"/>-->
            </LinearLayout>
            </FrameLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:startIconDrawable="@drawable/ic_baseline_how_to_reg_24"
                app:boxCornerRadiusTopStart="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fNameEditTextProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Full Name"
                android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:startIconDrawable="@drawable/ic_baseline_date_range_24"
                    android:layout_weight="1"
                    app:boxCornerRadiusTopStart="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bornDateEditTextProvider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Born Date"
                    android:backgroundTint="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/calenderPickerProvider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_baseline_calendar_today_24" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:startIconDrawable="@drawable/ic_baseline_local_phone_24"
                app:boxCornerRadiusTopStart="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneNumberEditTextProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Phone Number"
                android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:startIconDrawable="@drawable/ic_baseline_house_24"
                app:boxCornerRadiusTopStart="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addressEditTextProvider"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Address"
                android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/simpanEditProviderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorBlue"
                android:text="SAVE"
                app:cornerRadius="38dp"
                app:iconGravity="textEnd"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutProviderButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/colorRed"
                android:text="Logout"
                app:cornerRadius="38dp"
                app:iconGravity="textEnd"></com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>