<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/detail_asset_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorBlueOcean"
        android:padding="10dp"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/item_monthly_asset_report_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="month"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                />
            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/item_monthly_total_parked_report_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="total parked"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_weight="1"
            >

            <TextView
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/item_monthly_data_report_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="09/03/2020 20.00"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                />
            <TextView
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/item_monthly_data_total_parked_report_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="09/03/2020 22.00"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                />
            <TextView
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:id="@+id/item_monthly_revenue_report_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 4000"
                android:gravity="right"
                android:layout_gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/detail_asset_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>